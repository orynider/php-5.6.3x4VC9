LDAP_INCDIR= ../../../include       
LDAP_LIBDIR= ../../../libraries

BUILD_OPT = "--enable-dnssrv"
BUILD_MOD = @BUILD_DNSSRV@
LINKAGE = @BUILD_DNSSRV_DYNAMIC@

LIBBASE = back_dnssrv

XINCPATH = -I.. -I$(srcdir)/..
