SCRIPTSDIR=./scripts

all:	FORCE
	@echo "Initiating LDAP tests..."; \
	test -d test-db || $(MKDIR) test-db ; \
	test -d test-repl || $(MKDIR) test-repl ; \
	$(SCRIPTSDIR)/all $(SCRIPTSDIR)

install:	FORCE

depend:	FORCE

clean:	FORCE
	$(RM) test-db/[^C]* test-repl/[^C]*

veryclean:	clean

links:
	@echo "making links in `$(PWD)`"; \
	$(LN) .src/scripts . ; \
	$(LN) .src/data . ; \
	$(MKDIR) test-db test-repl
